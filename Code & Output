import pandas as pd
import yfinance as yf

# Choose 5 international indices and 5 equities from yfinance
tickers = ["^GSPC", "^DJI", "^IXIC", "^FTSE", "^N225", "AAPL", "MSFT", "GOOGL", "AMZN", "TSLA"]

# Load the daily data since 2010-01-01
df = yf.download(tickers, start="2010-01-01", end="2023-05-01")

# Calculate the daily returns
df["daily_returns"] = df["Adj Close"].pct_change().iloc[:,0]

# Calculate the cumulative returns
df["cumulative_returns"] = (df["daily_returns"] + 1).cumprod()

# Calculate the maximum drawdowns
df["max_drawdown"] = df["cumulative_returns"].min() - 1

# Calculate the Sharpe Ratio
df["sharpe_ratio"] = df["daily_returns"].mean() / df["daily_returns"].std()

# Calculate the Sortino Ratio
df["sortino_ratio"] = df["daily_returns"].mean() / df["daily_returns"].std(ddof=1)

# Print the results
print(df)








